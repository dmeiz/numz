- require_js("new.js")
%h2 Add a Num
- Merb.logger.debug("errors=#{@num.errors.full_messages.join}")
- unless @num.errors.empty?
  %ul.errors
    - @num.errors.full_messages.each do |error|
      %li= error
- form_for(:num, :action => url(:action => "new")) do
%table
  %tr
    %th Value
    %td= text_field(:name => "value", :value => @value)
  %tr
    %th Relevant At
    %td
      = text_field(:name => "relevant_at", :value => date_to_s(@num.relevant_at)) 
      = image_tag("calendar_date_select/calendar.gif", :id => "relevant_at_cal")
  %tr
    %th Link
    %td= text_control(:link)
  %tr
    %th Tags
    %td= text_field(:name => "tag_names", :value => @tag_names)
  %tr
    %td/
    %td= submit_field
- end

